{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "spring-boot-backend",
      "image": "michaelxsteinert/spring-boot-backend:latest",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ],
      "environment": [
        {
          "name": "SPRING_DATASOURCE_URL",
          "value": "jdbc:postgresql://URL_EBS_DATABASE:5432/customer"
        }
      ]
    },
    {
      "name": "react-frontend",
      "image": "michaelxsteinert/react-frontend:latest",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 5173
        }
      ]
    }
  ]
}